.contentArea {
	padding: 0; margin: 0; width: 100%;
}
.contentBody {
	background-color: White; padding: 20px; display: block;
}
/* /// HEADER /// */
.logo {
	padding: 5px 0px 15px;
}
.header {
	background-color: White; padding: 5px 20px 0px; display: block;
}
/* /// MENU /// */
.tabMenu {
	border: 0px; height: 28px;
}
.tabLeft {
	width: 11px; white-space: nowrap;
	background: #ECECEC url(../img/tab_left.jpg) left top no-repeat;
	
}
.tabRight {
	width: 11px; white-space: nowrap;
	background: #ECECEC url(../img/tab_right.jpg) left top no-repeat;
}
.tabCenter {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10px;
	color: #333333;
	text-align: center;
	vertical-align: middle;
	background: #FFFFFF url(../img/tab_center.jpg) left top repeat-x;
	white-space: nowrap;
}
.tabCenter a {
	text-decoration: none;
}
.tabCenter a:hover {
	color: #FFFFFF;
}
/* /// PAGE OPTIONS /// */
.pageOption {
	width: 100%;
	padding: 5px 25px 5px;
	background-color: #F5F5F5;
	border-top: 1px #CCCCCC;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10px;
}
.pageOption a {
	text-decoration: none;
	color: #333333;
	padding-right: 10px;
}
.pageOption a:hover {
	color: #666666;
	padding-right: 10px;
}
/* /// PAGE TITLE /// */
.pageTitle {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 16px;
	font-weight: bold;

	color: #2580a2;
	border-bottom: 1px solid #CCCCCC;
	padding: 10px;
}
.MenuHeader {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	font-weight: bold;

	color: #C20320;
	border-bottom: 1px solid #CCCCCC;
	padding-left: 5px;
}

.sectionTitle {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 12px;
	color: #666666;
	border-bottom: 1px solid #CCCCCC;
	width: 500px;
	padding: 20px 5px 5px;
}
.sectionCaption{
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10px;
	color: #333333;
	width: 500px;
	padding: 5px 5px 10px;
}
